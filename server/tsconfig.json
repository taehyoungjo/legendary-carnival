{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2018", "dom"],
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "strictNullChecks": true
  },
  "include": ["src/**/*", "tests"]
}
